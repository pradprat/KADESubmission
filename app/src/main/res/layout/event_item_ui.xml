<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 desember 2019"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/item_event_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19:10:10"
                app:layout_constraintEnd_toEndOf="@+id/item_event_date"
                app:layout_constraintStart_toStartOf="@+id/item_event_date"
                app:layout_constraintTop_toBottomOf="@+id/item_event_date" />

            <TextView
                android:id="@+id/event_divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text=":"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/item_event_time"
                app:layout_constraintStart_toStartOf="@+id/item_event_time"
                app:layout_constraintTop_toBottomOf="@+id/item_event_time" />

            <TextView
                android:id="@+id/item_score_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="1"
                app:layout_constraintBottom_toBottomOf="@+id/event_divider"
                app:layout_constraintEnd_toStartOf="@+id/event_divider"
                app:layout_constraintTop_toTopOf="@+id/event_divider" />

            <TextView
                android:id="@+id/item_score_away"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="2"
                app:layout_constraintBottom_toBottomOf="@+id/event_divider"
                app:layout_constraintStart_toEndOf="@+id/event_divider"
                app:layout_constraintTop_toTopOf="@+id/event_divider" />

            <TextView
                android:id="@+id/item_event_name_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="portugal"
                app:layout_constraintBottom_toBottomOf="@+id/item_score_home"
                app:layout_constraintEnd_toStartOf="@+id/item_score_home"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/item_score_home" />

            <TextView
                android:id="@+id/item_event_name_away"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="England"
                app:layout_constraintBottom_toBottomOf="@+id/item_score_away"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/item_score_away"
                app:layout_constraintTop_toTopOf="@+id/item_score_away" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>